# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Default indent style and size
[*]
indent_style = space
indent_size = 4

# Matches multiple files with braces, here specifically for Lua files
[*.lua]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
